{% extends 'layout.html.twig' %}
{% block stylesheet %}

<link rel="stylesheet" type="text/css" href="{{ asset("css/main.css") }}">

{% endblock %}
{% block body %}

    <h1>Ledenlijst</h1>
 <a href="{{ path('memberdate_index') }}">Terug naar lijst</a>
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ memberDate.id }}</td>
            </tr>
            <tr>
                <th>Voornaam</th>
                <td>{{ memberDate.firstName }}</td>
            </tr>
            <tr>
                <th>Achternaam</th>
                <td>{{ memberDate.lastName }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ memberDate.email }}</td>
            </tr>
            <tr>
                <th>Straat</th>
                <td>{{ memberDate.street }}</td>
            </tr>
            <tr>
                <th>Huisnummer</th>
                <td>{{ memberDate.houseNumber }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ memberDate.zipCode }}</td>
            </tr>
            <tr>
                <th>Woonplaats</th>
                <td>{{ memberDate.city }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
     
           
        
        <li>
            <a class="button" href="{{ path('memberdate_edit', { 'id': memberDate.id }) }}">Bewerken</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="button" type="submit" value="Verwijderen">
            {{ form_end(delete_form) }}
        </li>
    </ul>

{% endblock %}
