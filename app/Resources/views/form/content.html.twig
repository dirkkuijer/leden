

{% block form_row %}
  
    <div class="form_row">

        <div class="grid-x grid-padding-x">
            <div class="cell large-2 medium-4">
                {{ form_errors(form) }}
            </div>
            <div class="cell large-3 medium-2">
                {{ form_label(form) }}
            </div>
            <div class="cell large-4 medium-3">
                {{ form_widget(form) }}
            </div>
            <div class="cell large-auto medium-3"></div>
        </div>

    </div>
  
{% endblock %}
