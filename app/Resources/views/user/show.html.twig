{% extends 'layout.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
{% endblock %}

 {% block javascript %}
        {{ parent() }}
{% endblock %}

{% block body %}
    
        <h3>Gebruikerslijst</h3>
  
        <div class="grid-x grid-padding-x">
            <div class="cell medium-2">
                <a class="button" href="{{ path('user_index') }}"
                title="Terug naar lijst">
                    <i class="fas fa-clipboard-list medium"></i>
                </a>
            </div>
            <div class="cell medium-10"></div>
        </div>
            
        <div class="grid-x grid-padding-x">
                <div class="cell medium-2"></div>
                    <div class="cell medium-8">
                    <table class="stack">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Gebruiker</th>
                        <td>{{  user.username}}</td>
                    </tr>
                    <tr>
                        <th>E-mail</th>
                        <td>{{ user.email}}</td>
                    </tr>
                </tbody>
            </table>
            </div>
            <div class="cell medium-2"></div>
        </div>

        <div class="grid-x grid-padding-x">
                <div class="cell small-6"></div>
                <div class="cell small-2">
                    <a class="button" href="{{ path('user_edit', { 'id': user.id }) }}" title="Bewerken">
                    <i class="far fa-edit"></i></a>
                </div>
                </br>
                    {{ form_start(delete_form) }}
                    <button class="button" type="submit" title="Verwijderen">
                        <i class="far fa-trash-alt"></i>
                    </button>
                    {{ form_end(delete_form) }}
                <div class="cell small-4"></div>
            </div>
    

{% endblock %}
