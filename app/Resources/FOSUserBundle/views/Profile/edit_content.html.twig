{% extends "layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block stylesheet %}
         {% stylesheets filter='cssrewrite' output="css/main.css"
                "%kernel.root_dir%/Resources/assets/css/foundation.css"
                "%kernel.root_dir%/Resources/assets/css/main.css"
            %}
            <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %} 
{% endblock %}

{% block body %}
    <h3>Gebruiker aanpassen</h3>

    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
       

             <div class="grid-x grid-padding-x">
                <div class="cell medium-4"></div>
                <div class="cell medium-2">{{ form_label(form.username) }}</div>
                <div class="cell medium-2">{{ form_widget(form.username) }}</div>
                <div class="cell medium-4"></div>
            </div>

             <div class="grid-x grid-padding-x">
                <div class="cell medium-4"></div>
                <div class="cell medium-2">{{ form_label(form.email) }}</div>
                <div class="cell medium-2">{{ form_widget(form.email) }}</div>
                <div class="cell medium-4"></div>
            </div>

             <div class="grid-x grid-padding-x">
                <div class="cell medium-4"></div>
                <div class="cell medium-2">{{ form_label(form.current_password) }}</div>
                <div class="cell medium-2">{{ form_widget(form.current_password) }}</div>
                <div class="cell medium-4"></div>
            </div>
     
               <div class="grid-x grid-padding-x">
                <div class="cell medium-4"></div>
                    <div class="cell medium-2">
                        <input type="submit" value="{{ 'profile.edit.submit'|trans }}" />
                          </div>
                <div class="cell medium-6"></div>
            </div>
    {{ form_end(form) }}
{% endblock %}

{% block footer %}
{% endblock %}
