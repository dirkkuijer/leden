{% extends 'layout.html.twig'%}
{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<h3>Inloggen</h3>


    <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        
    <div class="grid-x grid-padding-x">
        <div class="cell medium-4"></div>
            <div class="cell medium-1">
                <label for="username">{{ 'security.login.username'|trans }}</label>
            </div>
            <div class="cell medium-3">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
            </div>
        <div class="cell medium-3"></div>
    </div>

    <div class="grid-x grid-padding-x">
        <div class="cell medium-4"></div>
            <div class="cell medium-1">
            <label for="password">{{ 'security.login.password'|trans }}</label>
            </div>
            <div class="cell large-3">
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
         </div>
        <div class="cell medium-3"></div>
    </div>
       
       <div class="grid-x grid-padding-x">
            <div class="cell medium-7"></div> 
                <div class="cell medium-3">
                    <input class="button" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </div>
            <div class="cell medium-2"></div> 
        </div>
    </form>

{% endblock %}

