
{% extends "layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

    {% block stylesheet %}
        {{ parent() }}            
    {% endblock %}
        

{% block body %}


        <h3>Wachtwoord veranderen</h3>


    {{ form_start(form, { 'action': path('fos_user_change_password'), 
        'attr': { 'class': 'fos_user_change_password'} }
        , {
            'attr': {
                'novalidate': 'novalidate',
                'data-abide': 'data-abide'
            }
        }) }}
           
        {{ form_row(form.current_password) }}
        {{ form_row(form.plainPassword.first, {
                'attr' : { 'placeholder' : 'Minimaal 10 karakters', }
            }) 
        }}
            <span class="form-error">Er gaat iets fout</span>
        {{ form_row(form.plainPassword.second, {
                'attr' : { 'placeholder' : 'Minimaal 10 karakters'}
            }) }}

<div class="grid-x grid-padding-x">
    <div class="cell medium-6"></div>
        <div class="cell medium-2">
                {#  value="{{ 'change_password.submit'|trans }}" stond in input type submit #}
                <button class="button primary" type="submit" />
                <i class="far fa-save"></i>
            </button>
                {{ form_end(form) }}
        </div>
    <div class="cell medium-6"></div>
</div> 

{% endblock %}
