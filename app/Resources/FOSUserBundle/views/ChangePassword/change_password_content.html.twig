{% extends "layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

 {% block stylesheet %}
            {% stylesheets filter='cssrewrite' output="css/main.css"
                "%kernel.root_dir%/Resources/assets/css/foundation.css"
                "%kernel.root_dir%/Resources/assets/css/main.css"
            %}
            <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}  
        {% endblock %}
        

{% block body %}


        <h3>Wachtwoord veranderen</h3>


    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
     

{# hieronder heb je de code toegevoegd. #}
            <div class="grid-x grid-padding-x">
                <div class="cell medium-4"></div>
                    <div class="cell medium-2">
                        {{form_label(form.current_password) }}
                    </div>
                    <div class="cell medium-3">
                        {{ form_widget(form.current_password) }}
                    </div>
                    <div class="cell medium-3"></div>
            </div>      

            <div class="grid-x grid-padding-x">
                <div class="cell medium-4"></div>
                    <div class="cell medium-2">
                        {{form_label(form.plainPassword.first) }}
                    </div>
                    <div class="cell medium-3">
                        {{form_widget(form.plainPassword.first) }}
                    </div>
                    <div class="cell medium-3"></div>
            </div>      

            <div class="grid-x grid-padding-x">
                <div class="cell medium-4"></div>
                    <div class="cell medium-2">
                        {{form_label(form.plainPassword.second) }}
                    </div>
                    <div class="cell medium-3">
                        {{form_widget(form.plainPassword.second) }}
                    </div>
                    <div class="cell medium-3"></div>
            </div>     

             <div class="grid-x grid-padding-x">
                <div class="cell medium-6"></div>
                    <div class="cell medium-2">
                         <input type="submit" value="{{ 'change_password.submit'|trans }}" />
                            {{ form_end(form) }}
                    </div>
                <div class="cell medium-6"></div>
            </div> 
         


{% endblock %}

